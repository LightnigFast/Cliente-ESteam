<Page x:Class="Cliente_TFG.Pages.paginaTienda"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cliente_TFG.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="paginaTienda">

    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" Background="Transparent">
        <StackPanel HorizontalAlignment="Center">
            <!--GRID PARA LA CATEGORIA-->
            <Grid x:Name="panelControlador" Background="Blue" Width="1150" Height="35" VerticalAlignment="Top" Margin="0,30,0,0">

            </Grid>

            <!--GRID PARA JUEGOS DESTACADOS-->
            <Grid Name="panelJuegosDestacados" Background="Transparent" Width="1150" Height="366" VerticalAlignment="Top" Margin="0,70,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="4*"/>
                </Grid.ColumnDefinitions>

                <!--PARTE PARA LA IMAGEN-->
                <Image x:Name="imagenTiendaGrande" Grid.Column="0"/>

                <!--PARTE PARA EL TITULO, LAS DEMAS IMAGENES Y EL PRECIO-->
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <!--TITULO DEL JUEGO-->
                    <TextBlock x:Name="carruselTituloJuego" Grid.Row="0" Height="70" Background="Red"/>

                    <WrapPanel Name="carruselImagenes" Grid.Row="1" Background="Blue"/>

                    <!--PRECIO DEL JUEGO-->
                    <TextBlock x:Name="carruselPrecioJuego" Grid.Row="2" Height="50" Background="Yellow"/>
                </Grid>
            </Grid>

            <!--CONTENEDOR PARA LOS BOTONES DEL CARRUSEL-->
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="0,10,0,0">
                
                <!--Botón izquierdo-->
                <Button Grid.Column="0" Content="◀" Width="40" Height="30" VerticalAlignment="Center" Click="BtnAnterior_Click" Margin="10,0"/>

                <!--Botón derecho-->
                <Button Grid.Column="1" Content="▶" Width="40" Height="30" VerticalAlignment="Center" Click="BtnSiguiente_Click" Margin="10,0"/>
            </StackPanel>




            <!--GRID PARA JUEGOS CON OFERTAS ESPECIALES-->
            <Grid Name="panelOfertasEspaciales" Background="Transparent" Width="1150" Height="400" VerticalAlignment="Top" Margin="0,70,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                
                
            </Grid>

            <!--GRID PARA JUEGOS CON CIERTA CANTIDAD DE OFERTA-->
            <Grid Name="panelOfertaEspecifica" Background="Yellow" Width="1150" Height="150" VerticalAlignment="Top" Margin="0,70,0,0">

            </Grid>

            <!--GRID PARA NUEVOS LANZAMIENTOS-->
            <Grid Name="panelNuevosLanzamientos" Background="Orange" Width="1150" Height="800" VerticalAlignment="Top" Margin="0,70,0,0">

            </Grid>

        </StackPanel>
       

    </ScrollViewer>

</Page>
