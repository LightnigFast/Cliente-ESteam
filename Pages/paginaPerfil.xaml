<Page x:Class="Cliente_TFG.Pages.paginaPerfil"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cliente_TFG.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="paginaPerfil">

    <Page.Resources>
        <!--ESTILO PARA EL BOTON DE AMIGOS-->
        <Style x:Key="MinimalButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF4A4A4A"/>
            <Setter Property="BorderBrush" Value="#FF5A5A5A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF5A5A5A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--ESTILO PARA EL BOTON DE EDITAR USER-->
        <Style x:Key="EditButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF4A4A4A"/>
            <Setter Property="BorderBrush" Value="#FF6A6A6A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF5A5A5A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--ESTILO PARA EL BOTON DE CAMBIAR FOTO-->
        <Style x:Key="CambiarFotoButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF4A4A4A"/>
            <Setter Property="BorderBrush" Value="#FF6A6A6A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF5A5A5A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--ESTILO PARA LAS CARATULAS DE JUEGOS CON ANIMACION ROJA-->
        <Style x:Key="GameCoverStyle" TargetType="Border">
            <Setter Property="Background" Value="#FF1E1E1E"/>
            <Setter Property="BorderBrush" Value="#FF4A4A4A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" 
                                               To="1.05" Duration="0:0:0.2">
                                    <DoubleAnimation.EasingFunction>
                                        <QuadraticEase EasingMode="EaseOut"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" 
                                               To="1.05" Duration="0:0:0.2">
                                    <DoubleAnimation.EasingFunction>
                                        <QuadraticEase EasingMode="EaseOut"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                                <!--CAMBIO A COLOR ROJO COMO LOS BOTONES DE ARRIBA-->
                                <ColorAnimation Storyboard.TargetProperty="BorderBrush.Color" 
                                              To="#FFDC143C" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" 
                                               To="1" Duration="0:0:0.2">
                                    <DoubleAnimation.EasingFunction>
                                        <QuadraticEase EasingMode="EaseOut"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" 
                                               To="1" Duration="0:0:0.2">
                                    <DoubleAnimation.EasingFunction>
                                        <QuadraticEase EasingMode="EaseOut"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                                <ColorAnimation Storyboard.TargetProperty="BorderBrush.Color" 
                                              To="#FF4A4A4A" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid Background="#FF2D2D30">

        <!--SCROLL VIEWER PARA EVITAR CORTES-->
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">

            <!--CONTENEDOR CENTRADO CON ANCHO MAXIMO MAS AMPLIO-->
            <Grid HorizontalAlignment="Center" MaxWidth="1100" MinWidth="800" Margin="30,20">

                <!--CONTENEDOR PRINCIPAL CON FONDO OSCURO-->
                <Border Background="#FF3E3E42" CornerRadius="8" Padding="30">

                    <!--GRID PRINCIPAL CON FILAS DEFINIDAS-->
                    <Grid Name="gridCentral">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!--FILA SUPERIOR - PERFIL DEL USUARIO-->
                        <Grid Grid.Row="0" Margin="0,0,0,30">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!--COLUMNA IZQUIERDA - IMAGEN Y BOTON CAMBIAR FOTO-->
                            <StackPanel Grid.Column="0" Margin="0,0,30,0" VerticalAlignment="Top">
                                <!--IMAGEN DEL USER-->
                                <Border Background="#FF1E1E1E" CornerRadius="4" Margin="0,0,0,15"
                                        Width="180" Height="180">
                                    <Image Name="imagenUser" Stretch="UniformToFill"/>
                                </Border>

                                <!--BOTON CAMBIAR FOTO-->
                                <Button Content="Cambiar foto" 
                                        x:Name="btnSubirImagen" 
                                        Style="{StaticResource CambiarFotoButtonStyle}"
                                        Padding="12,6"
                                        HorizontalAlignment="Center"
                                        Click="btnSubirImagen_Click_1"/>
                            </StackPanel>

                            <!--COLUMNA DERECHA - INFO DEL USUARIO-->
                            <StackPanel Name="gridInfoUser" Grid.Column="1" Orientation="Vertical" VerticalAlignment="Top">

                                <!--HEADER CON NOMBRE Y BOTON EDITAR-->
                                <Grid Margin="0,0,0,20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!--NOMBRES DE USUARIO-->
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Name="nombreUser" 
                                                   Text="ruben7" 
                                                   Foreground="White" 
                                                   FontWeight="Bold" 
                                                   FontSize="32" 
                                                   Margin="0,0,0,5"/>
                                        <TextBlock Name="nombreCuenta" 
                                                   Text="ruben7" 
                                                   Foreground="#FFAAAAAA" 
                                                   FontWeight="Light" 
                                                   FontSize="16"/>
                                    </StackPanel>

                                    <!--BOTON EDITAR PERFIL-->
                                    <Button Grid.Column="1" 
                                            Style="{StaticResource EditButtonStyle}"
                                            Padding="10,6"
                                            VerticalAlignment="Top">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="✏" Foreground="White" FontSize="12" Margin="0,0,5,0"/>
                                            <TextBlock Text="Editar perfil" Foreground="White" FontSize="12"/>
                                        </StackPanel>
                                    </Button>
                                </Grid>

                                <!--BOTON DE AMIGOS-->
                                <Button Margin="0,0,0,20" 
                                        Padding="15,8" 
                                        HorizontalAlignment="Left" 
                                        Style="{StaticResource MinimalButtonStyle}" 
                                        Cursor="Hand">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock Text="👤" FontSize="16" Foreground="White" Margin="0,0,8,0"/>
                                        <TextBlock Text="Amigos • " FontSize="14" Foreground="White" VerticalAlignment="Center"/>
                                        <TextBlock Name="txtNumeroAmigos" Text="127" FontSize="14" Foreground="White" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <!--BIOGRAFIA-->
                                <StackPanel>
                                    <TextBlock Name="txtBiografia" 
                                               Text="BIOGRAFÍA:" 
                                               Foreground="White" 
                                               FontWeight="Bold" 
                                               FontSize="14" 
                                               Margin="0,0,0,8"/>

                                    <Border Background="#FF1E1E1E" 
                                            BorderBrush="#FF4A4A4A" 
                                            BorderThickness="1" 
                                            CornerRadius="4" 
                                            MinHeight="70"
                                            Padding="15">
                                        <TextBlock Name="descripccionCuenta" 
                                                   Text="probando" 
                                                   Foreground="White" 
                                                   FontWeight="Light" 
                                                   FontSize="14" 
                                                   TextWrapping="Wrap"
                                                   VerticalAlignment="Top"/>
                                    </Border>
                                </StackPanel>

                            </StackPanel>
                        </Grid>

                        <!--FILA INFERIOR - SECCION DE JUEGOS-->
                        <StackPanel Grid.Row="1" VerticalAlignment="Top">
                            <!--SEPARADOR-->
                            <Border Height="1" Background="#FF4A4A4A" Margin="0,0,0,25"/>

                            <!--TITULO DE LA SECCION-->
                            <TextBlock Text="3 últimos juegos comprados" 
                                       Foreground="White" 
                                       FontSize="18" 
                                       FontWeight="Bold" 
                                       HorizontalAlignment="Center" 
                                       Margin="0,0,0,25"/>

                            <!--CONTENEDOR DE LAS CARATULAS CON WRAP PANEL PARA RESPONSIVIDAD-->
                            <WrapPanel HorizontalAlignment="Center" Orientation="Horizontal">

                                <!--JUEGO 1-->
                                <Border Style="{StaticResource GameCoverStyle}" 
                                        Width="150" Height="200" 
                                        Margin="15">
                                    <Grid>
                                        <Image Name="caratulaJuego1" 
                                               Stretch="UniformToFill"
                                               />

                                        <!--OVERLAY PARA INFO DEL JUEGO-->
                                        <Border Background="#AA000000" 
                                                VerticalAlignment="Bottom"
                                                Padding="10,6">
                                            <StackPanel>
                                                <TextBlock Name="nombreJuego1" 
                                                           Text="Assassin's Creed" 
                                                           Foreground="White" 
                                                           FontWeight="Bold" 
                                                           FontSize="11"
                                                           TextWrapping="Wrap"/>
                                                <TextBlock Name="fechaJuego1" 
                                                           Text="Comprado: 15/01/2024" 
                                                           Foreground="#FFCCCCCC" 
                                                           FontSize="9"/>
                                            </StackPanel>
                                        </Border>
                                    </Grid>
                                </Border>

                                <!--JUEGO 2-->
                                <Border Style="{StaticResource GameCoverStyle}" 
                                        Width="150" Height="200" 
                                        Margin="15">
                                    <Grid>
                                        <Image Name="caratulaJuego2" 
                                               Stretch="UniformToFill"
                                               />

                                        <Border Background="#AA000000" 
                                                VerticalAlignment="Bottom"
                                                Padding="10,6">
                                            <StackPanel>
                                                <TextBlock Name="nombreJuego2" 
                                                           Text="Cyberpunk 2077" 
                                                           Foreground="White" 
                                                           FontWeight="Bold" 
                                                           FontSize="11"
                                                           TextWrapping="Wrap"/>
                                                <TextBlock Name="fechaJuego2" 
                                                           Text="Comprado: 10/01/2024" 
                                                           Foreground="#FFCCCCCC" 
                                                           FontSize="9"/>
                                            </StackPanel>
                                        </Border>
                                    </Grid>
                                </Border>

                                <!--JUEGO 3-->
                                <Border Style="{StaticResource GameCoverStyle}" 
                                        Width="150" Height="200" 
                                        Margin="15">
                                    <Grid>
                                        <Image Name="caratulaJuego3" 
                                               Stretch="UniformToFill"
                                               />

                                        <Border Background="#AA000000" 
                                                VerticalAlignment="Bottom"
                                                Padding="10,6">
                                            <StackPanel>
                                                <TextBlock Name="nombreJuego3" 
                                                           Text="The Witcher 3" 
                                                           Foreground="White" 
                                                           FontWeight="Bold" 
                                                           FontSize="11"
                                                           TextWrapping="Wrap"/>
                                                <TextBlock Name="fechaJuego3" 
                                                           Text="Comprado: 05/01/2024" 
                                                           Foreground="#FFCCCCCC" 
                                                           FontSize="9"/>
                                            </StackPanel>
                                        </Border>
                                    </Grid>
                                </Border>

                            </WrapPanel>
                        </StackPanel>

                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>

    </Grid>
</Page>